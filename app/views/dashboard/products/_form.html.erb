  <%= form_with(model: product, url: [:dashboard, product], local: true) do |form| %>
    <% if product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="card mb-5">
      <div class="card-body">
        <div class="form-group">
          <%= form.label :title %>
          <%= form.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :short_description %>
          <%= form.text_area :short_description, class: 'form-control' %>
        </div>

        <div class="form-group row">
          <div class="col-2">
            <%= form.label :unit_price, 'Price' %>
            <%= form.text_field :unit_price, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= form.label :icon %>
          <%= form.select :icon, list_icons, { selected: product.icon }, { class: 'form-control' }%>
        </div>

        <div class="form-group">
          <%= form.label :metadata %>
          <%= form.text_area :metadata, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :in_stock %>
          <%= form.check_box :in_stock, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :active %>
          <%= form.check_box :active, class: 'form-control' %>
        </div>

        <div class="actions">
          <%= form.submit 'Submit', class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  <% end %>
