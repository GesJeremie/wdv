<div class="container">
  <h1>Products</h1>

  <div class="table-responsive">
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Unit price</th>
          <th>In stock</th>
          <th>Category</th>
          <th>Active</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.title %></td>
            <td><%= product.unit_price %></td>
            <td><%= product.in_stock %></td>
            <td><%= product.category.title %></td>
            <td><%= dot_boolean(product.active?).html_safe %></td>
            <td><%= link_to 'Show', dashboard_product_path(product) %></td>
            <td><%= link_to 'Edit', edit_dashboard_product_path(product) %></td>
            <td><%= link_to 'Destroy', dashboard_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <br>

  <%= link_to 'New Product', new_dashboard_product_path, class: 'btn btn-primary' %>
</div>
