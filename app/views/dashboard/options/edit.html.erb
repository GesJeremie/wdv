<div class="container">
    <h1>Editing Options</h1>

    <%= form_with(model: @option, url: dashboard_options_path, local: true) do |form| %>
      <% if @option.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@option.errors.count, "error") %> prohibited this product from being saved:</h2>

          <ul>
              <% @option.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
          </ul>
        </div>
      <% end %>

      <div class="card mb-5">
        <div class="card-body">

          <div class="form-group">
            <%= form.label :open %>
            <%= form.check_box :open, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :phone %>
            <%= form.text_field :phone, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :admin_name %>
            <%= form.text_field :admin_name, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :admin_password %>
            <%= form.text_field :admin_password, class: 'form-control' %>
          </div>

          <div class="actions">
            <%= form.submit 'Submit', class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>

</div>
