<div class="container">

  <h1>Categories</h1>

  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Title</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.title %></td>
            <td><%= link_to 'Show', dashboard_category_path(category) %></td>
            <td><%= link_to 'Edit', edit_dashboard_category_path(category) %></td>
            <td><%= link_to 'Destroy', dashboard_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <br>

  <%= link_to 'New Dashboard Category', new_dashboard_category_path, class: 'btn btn-primary' %>
</div>
